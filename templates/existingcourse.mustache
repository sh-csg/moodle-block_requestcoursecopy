{{!
    @template block_requestcoursecopy/existingcourse

    Message to show if course copy already exists

    Example context (json):
    {
        "course": {
            "id": 123,
            "fullname": "Existing Course",
            "shortname": "existing_course"
        }
    }
}}
<div class="alert alert-success">
    {{#course}}
        <a class="btn btn-primary" href="{{{global.wwwroot}}}/course/view.php?id={{id}}">
        {{#buttontext}}{{buttontext}}{{/buttontext}}
        {{^buttontext}}{{#str}}goto, block_requestcoursecopy{{/str}}{{/buttontext}}
        </a>
    {{/course}}
</div>