{{!
    @template block_requestcoursecopy/copybutton

    Output a button to request a course copy.

    Example context (json):
    {
        "blockid": 123
    }
}}
<form action="{{{global.wwwroot}}}/blocks/requestcoursecopy/requestcoursecopy.php"
      method="post">
      <input type="hidden" name="blockid" value="{{blockid}}">
    <button
        class="btn btn-secondary"
        data-action="requestcoursecopy"
        type="submit">
        {{#buttontext}}{{buttontext}}{{/buttontext}}
        {{^buttontext}}{{#str}}requestcoursecopy, block_requestcoursecopy{{/str}}{{/buttontext}}
    </button>
</form>
